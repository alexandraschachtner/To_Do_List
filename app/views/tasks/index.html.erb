
<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.details %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
    </tr>
  <% end %>
</table>


<%= link_to 'New article', new_task_path %>
