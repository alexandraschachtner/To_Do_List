
<h1>New Article</h1>

<%= form_with scope: :task,  url: tasks_path, local: true do |form| %>
  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :Details %><br>
    <%= form.text_area :details %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
